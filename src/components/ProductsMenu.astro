---
import { Image } from 'astro:assets';
import PersonasTomandoCafe from '../assets/PersonasTomandoCafe.png';
interface Props {
  title: string;
  titleDescription: string;
  titleColor: string;
  linksList: string[];
  href: string;
}

const { title, titleDescription, titleColor, linksList, href } = Astro.props;
---

<div class="flex flex-col mt-14 pt-14 overflow-y-hidden">
  <div class="px-8">
    <h1 class="font-bold text-2xl" style={{ color: titleColor }}>
      {title}
    </h1>
    <p class="font-thin text-md" style={{ color: titleColor }}>
      {titleDescription}
    </p>
  </div>
  <div class="flex flex-row mt-4 px-8">
    <ul class="flex flex-col">
      {
        linksList.map((link) => (
          <a href={`${href}/${link.split(' ').join('').toLocaleLowerCase()}`}>
            <li class="text-2xl font-bold mt-2">{link}</li>
          </a>
        ))
      }
    </ul>
  </div>
  <div class="mt-8">
    <Image src={PersonasTomandoCafe} alt="Personas tomando cafe" />
  </div>
</div>
