---
import { Image } from 'astro:assets';
import Facebook from '../assets/components/footer/facebook.svg';
import Instagram from '../assets/components/footer/instagram.svg';
import Whatsapp from '../assets/components/footer/whatsapp.svg';
import Logo from '../assets/desktop/footer/Logo yellow y línea.png';
import PerroDeLogo from '../assets/desktop/header/Logo_corner.svg';
---

<footer class="w-full bg-[#62C6D1] py-10">
  <div>
    <h3 class="uppercase text-white my-8 px-20">Yellow Coffee</h3>
  </div>
  <div class="pl-20 flex justify-between items-center gap-10 xl:gap-44">
    <div class="text-white flex flex-1 gap-10 pb-24">
      <ul class="uppercase">
        <h4 class="font-bold">Compañia</h4>
        <li class="flex flex-wrap justify-center items-center">
          <a href="/nosotros">
            <div class="flex flex-wrap items-center">
              Acerca de&nbsp;
              <p>nosotr</p><Image
                class="w-[13px] p-0 m-0"
                src={PerroDeLogo}
                alt={'Imagen del logo'}
              />
               s
            </div>
          </a>
        </li>
        <li>
          <a href="/contacto"> Contáctanos</a>
        </li>
        <li>
          <a href="/accesorios"> Accesorios</a>
        </li>
      </ul>
      <ul>
        <h4>Yellow Coffee</h4>
        <li class="uppercase">
          <a href="/yellow-coffee/coffeedrip">Drip</a>
        </li>
        <li>
          <a href="/yellow-coffee/340gr"> 340 gr</a>
        </li>
        <li class="uppercase">
          <a href="/yellow-coffee/microlotes">Microlotes</a>
        </li>
        <li>
          <a href="/yellow-coffee/2500gr"> 2500 gr</a>
        </li>
      </ul>
      <ul>
        <h4 class="uppercase">Mush Coffee</h4>
        <li class="uppercase">
          <a href="/mush-coffee/coffeedrip"> Drip</a>
        </li>
        <li>
          <a href="/mush-coffee/40gr">40 gr</a>
        </li>
        <li>
          <a href="/mush-coffee/125gr">125 gr</a>
        </li>
        <li>
          <a href="/mush-coffee/340gr">340 gr</a>
        </li>
      </ul>
    </div>
    <div class="-mt-16">
      <div class="w-10/12">
        <Image src={Logo} alt={'Imagen del logo'} class="w-full" />
      </div>
      <div class="flex justify-around mt-3 mb-6">
        <Image src={Instagram} alt={'Imagen del logo de instagram'} />
        <Image src={Whatsapp} alt={'Imagen del logo de whatsapp'} />
        <Image src={Facebook} alt={'Imagen del logo de facebook'} />
      </div>
    </div>
  </div>
  <div class="separador"></div>
  <div class="pt-10 text-white px-8 flex justify-between opacity-70">
    <p class="capitalize">Diseñado por exportsflavor.co</p>
    <p class="uppercase">Yellow Coffee S.A.S</p>
  </div>
</footer>

<style>
  .separador {
    height: 2px;
    width: 100%;
    background-color: white;
  }
</style>
