---
import { Image } from 'astro:assets';
import ManosConCafe from '../assets/nosotros/manos-con-cafe.png';
interface Props {
  bgColor: string;
  textColor: string;
}

const { bgColor, textColor } = Astro.props;
---

<div
  id="nosotros-card-3"
  class="mx-4 px-8 pt-10 pb-0 rounded-xl mb-6"
  style={{ backgroundColor: `${bgColor}` }}
>
  <h3
    class="uppercase mb-6 font-bold text-2xl"
    style={{ color: `${textColor}` }}
  >
    Con cada taza
  </h3>
  <p class="text-lg" style={{ color: `${textColor}` }}>
    de café Yellow Coffee, estas contribuyendo a un proceso ambiental y social
    <div>
      <Image
        class="-mt-40"
        src={ManosConCafe}
        alt={'Imagen de unas manos con una taza de café'}
      />
    </div>
  </p>
</div>
